<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBar_image01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@id/imageView_image01"
        app:layout_constraintBottom_toBottomOf="@id/imageView_image01"
        app:layout_constraintStart_toStartOf="@id/imageView_image01"
        app:layout_constraintEnd_toEndOf="@id/imageView_image01"/>

    <ProgressBar
        android:id="@+id/progressBar_image02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="@id/imageView_image02"
        app:layout_constraintBottom_toBottomOf="@id/imageView_image02"
        app:layout_constraintStart_toStartOf="@id/imageView_image02"
        app:layout_constraintEnd_toEndOf="@id/imageView_image02"/>

    <ProgressBar
        android:id="@+id/progressBar_image03"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="@id/imageView_image03"
        app:layout_constraintBottom_toBottomOf="@id/imageView_image03"
        app:layout_constraintStart_toStartOf="@id/imageView_image03"
        app:layout_constraintEnd_toEndOf="@id/imageView_image03"/>

    <ProgressBar
        android:id="@+id/progressBar_image04"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="@id/imageView_image04"
        app:layout_constraintBottom_toBottomOf="@id/imageView_image04"
        app:layout_constraintStart_toStartOf="@id/imageView_image04"
        app:layout_constraintEnd_toEndOf="@id/imageView_image04"/>

    <ImageView
        android:id="@+id/imageView_image01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageView_image03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageView_image02"/>

    <ImageView
        android:id="@+id/imageView_image02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageView_image04"
        app:layout_constraintStart_toEndOf="@id/imageView_image01"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageView_image03"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toBottomOf="@id/imageView_image01"
        app:layout_constraintBottom_toTopOf="@id/button_Message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageView_image04" />

    <ImageView
        android:id="@+id/imageView_image04"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toBottomOf="@id/imageView_image02"
        app:layout_constraintBottom_toTopOf="@id/button_Message"
        app:layout_constraintStart_toEndOf="@id/imageView_image03"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <Button
        android:id="@+id/button_Message"
        android:text="@string/button_Message_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="75dp"
        app:layout_constraintTop_toBottomOf="@id/imageView_image03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>